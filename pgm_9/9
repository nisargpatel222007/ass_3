
//  Reverse an array of maximum 5 elements.

#include <stdio.h>

int main() 
{
    
    int arr[100]; 
    int n;
    printf("Enter number of  5 elements (max 5): ");
    scanf("%d", &n);
    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }
    printf("\nOriginal Array: ");
    for (int i = 0; i < n; i++)
    {
        printf("%d\t", arr[i]);
    }
    printf("\nReversed Array: ");
    for (int i = n - 1; i >= 0; i--)
    {
        printf("%d\t", arr[i]);
    }
    printf("\n"); 
}
