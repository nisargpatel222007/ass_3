#include <stdio.h>
#include <ctype.h>
#include <string.h>

int main()
{
    char str[100];

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    for (int i = 0; str[i]; i++)
        str[i] = toupper(str[i]);
    printf("\nUppercase: %s", str);

    for (int i = 0; str[i]; i++)
        str[i] = tolower(str[i]);
    printf("\nLowercase: %s", str);
}
